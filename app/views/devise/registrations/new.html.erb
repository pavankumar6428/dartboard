<h2>New Member Registration</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="controls"> <%= f.email_field :email, :autofocus => true, :placeholder => "email" %></div>
      <div class="controls"><%= f.password_field :password, :placeholder => "password" %></div>
      <div class="controls"><%= f.password_field :password_confirmation, :placeholder => "confirmation password" %></div>

  <div class="control-group">
    <div class="controls">
     <%= f.text_field :name, :class => 'text_field', :placeholder => "name*" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
     <%= f.text_field :company, :class => 'text_field', :placeholder => "company" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
     <%= f.text_field :jb_membership, :class => 'text_field', :placeholder => "Just Books Membership" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
     <%= f.number_field :phonenumber, :class => 'number_field', :placeholder => "phonenumber*" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit  "Sign Up", :class => 'btn btn-primary' %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
