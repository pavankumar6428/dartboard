<%- model_class = Campaign -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<%= image_tag @campaign.photo.url(:small) %>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:campaign_name) %>:</strong></dt>
  <dd><%= @campaign.campaign_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:impression_id) %>:</strong></dt>
  <dd><%= @campaign.impression_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @campaign.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time_frame) %>:</strong></dt>
  <dd><%= @campaign.time_frame %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @campaign.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo_file_name) %>:</strong></dt>
  <dd><%= @campaign.photo_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo_content_type) %>:</strong></dt>
  <dd><%= @campaign.photo_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo_file_size) %>:</strong></dt>
  <dd><%= @campaign.photo_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo_updated_at) %>:</strong></dt>
  <dd><%= @campaign.photo_updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              campaigns_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_campaign_path(@campaign), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              campaign_path(@campaign),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
